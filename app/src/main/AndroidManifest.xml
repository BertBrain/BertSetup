<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bert.ui" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".roomList.RoomListActivity"
            android:label="@string/title_RoomListActivity" >
        </activity>
        <activity
            android:name=".projectList.ProjectListActivity"
            android:label="@string/title_ProjectListActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".roomList.AddCategory"
            android:label="@string/title_activity_add_category" >
        </activity>
        <activity
            android:name=".projectList.CategoryEditorActivity"
            android:label="@string/title_activity_category_editor" >
        </activity>
        <activity
            android:name=".buildingList.BuildingListActivity"
            android:label="@string/title_activity_building_list" >
        </activity>
    </application>

</manifest>
