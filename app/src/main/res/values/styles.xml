<resources>

    <color name="LightGreen">#8AC45E</color>
    <color name="DarkGreen">#1C3C03</color>

    <color name="LightRed">#FFAB9E</color>
    <color name="DarkRed">#772417</color>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="Fragment" parent="AppTheme">
    </style>

    <style name="DefaultText" parent="AppTheme">
        <item name="android:textSize">20dp</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NormalButton" parent="AppTheme">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="OpenButton" parent="NormalButton">
    </style>

    <style name="ActionButton" parent="NormalButton">
    </style>

    <style name="SaveButton" parent="NormalButton">
        <item name="android:textColor">@color/DarkGreen</item>
        <item name="android:background">@color/LightGreen</item>
    </style>

    <style name="DeleteButton" parent="NormalButton">
        <item name="android:textColor">@color/LightRed</item>
        <item name="android:background">@color/DarkRed</item>
    </style>

</resources>
