<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="bert.ui.projectList.ProjectDetailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top"
        android:weightSum="1"
        android:id="@+id/deviceEditorViewLayout">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:rowCount="8"
            android:id="@+id/projectDetailGridLayout"
            android:columnCount="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Project Name:"
                android:id="@+id/textView5"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Contact Name"
                android:id="@+id/textView6"
                android:layout_row="1"
                android:layout_column="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/projectNameEditText"
                android:imeActionLabel="Done"
                android:imeOptions="actionDone"
                android:layout_row="0"
                android:layout_column="1" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contactNameEditText"
                android:imeActionLabel="Done"
                android:imeOptions="actionDone"
                android:layout_row="1"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Contact Number:"
                android:id="@+id/textView7"
                android:layout_row="3"
                android:layout_column="0" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contactNumberEditText"
                android:imeActionLabel="Done"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:layout_row="3"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Date Created:"
                android:id="@+id/textView8"
                android:layout_row="4"
                android:layout_column="0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="4/3/4"
                android:id="@+id/dateCreatedTextField"
                android:layout_row="4"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Date Acessed:"
                android:id="@+id/textView9"
                android:layout_row="5"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="4/9/14"
                android:id="@+id/dateAcessedTextField"
                android:layout_row="5"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spacer"
                android:layout_row="6"
                android:layout_column="0" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Export ROI Sheet"
                android:id="@+id/exportToROIButton"
                android:layout_row="7"
                android:layout_column="0"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Export Configurator CSV"
                android:id="@+id/exportToBertConfiguratorButton"
                android:layout_row="7"
                android:layout_column="1"/>
        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:rowCount="1"
            android:columnCount="3"
            android:orientation="vertical">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Project"
                android:layout_column="0"
                android:id="@+id/openProjectButton"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category View"
                android:layout_column="1"
                android:id="@+id/categoryEditorButton"
                android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Building View"
                android:layout_column="2"
                android:id="@+id/buildingEditorButton"
                android:layout_gravity="center_horizontal" />
        </GridLayout>
    </LinearLayout>
</FrameLayout>
