<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="bert.ui.projectList.ProjectDetailFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top"
        android:weightSum="1"
        android:id="@+id/deviceEditorViewLayout">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:rowCount="8"
            android:id="@+id/projectDetailGridLayout"
            android:columnCount="2"
            android:orientation="vertical">

            <TextView
                style="@style/ThinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Project Name:"
                android:id="@+id/textView5"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                style="@style/ThinText"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Contact Name"
                android:id="@+id/textView6"
                android:layout_row="1"
                android:layout_column="0" />

            <EditText
                style="@style/ThinText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/projectNameEditText"
                android:imeActionLabel="Done"
                android:imeOptions="actionDone"
                android:layout_row="0"
                android:layout_column="1" />

            <EditText
                style="@style/ThinText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contactNameEditText"
                android:imeActionLabel="Done"
                android:imeOptions="actionDone"
                android:layout_row="1"
                android:layout_column="1" />

            <TextView
                style="@style/ThinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Contact Number:"
                android:id="@+id/textView7"
                android:layout_row="3"
                android:layout_column="0" />

            <EditText
                style="@style/ThinText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contactNumberEditText"
                android:imeActionLabel="Done"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:layout_row="3"
                android:layout_column="1" />

            <TextView
                style="@style/ThinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Date Created:"
                android:id="@+id/textView8"
                android:layout_row="4"
                android:layout_column="0" />

            <TextView
                style="@style/ThinText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="4/3/4"
                android:id="@+id/dateCreatedTextField"
                android:layout_row="4"
                android:layout_column="1" />

            <TextView
                style="@style/ThinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Date Acessed:"
                android:id="@+id/textView9"
                android:layout_row="5"
                android:layout_column="0"
                android:textSize="20dp" />

            <TextView
                style="@style/ThinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="4/9/14"
                android:id="@+id/dateAcessedTextField"
                android:layout_row="5"
                android:layout_column="1" />

            <TextView
                style="@style/ThinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Export:"
                android:id="@+id/textView17"
                android:layout_row="6"
                android:layout_column="0"
                android:layout_gravity="center_vertical" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_row="6"
                android:layout_column="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ROI Sheet"
                    android:id="@+id/exportToROIButton"
                    android:layout_row="7"
                    android:layout_column="0"
                    android:layout_gravity="center_horizontal|right"
                    android:background="#ffdfdcdc"
                    android:paddingRight="0dp"
                    android:layout_marginRight="0dp"
                    android:padding="2dp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:background="@android:color/darker_gray"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configurator CSV"
                    android:id="@+id/exportToBertConfiguratorButton"
                    android:layout_row="7"
                    android:layout_column="1"
                    android:background="#ffdfdcdc"
                    android:layout_gravity="right"
                    android:padding="5dp" />
            </LinearLayout>

        </GridLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Project"
            android:layout_column="0"
            android:layout_row="0"
            android:id="@+id/openProjectButton"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</FrameLayout>
