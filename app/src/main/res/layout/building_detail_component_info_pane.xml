<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:paddingRight="@dimen/right_margin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:columnCount="2"
        android:orientation="vertical"
        android:id="@+id/buildingDetailGridView"
        android:rowCount="4">

        <TextView
            style="@style/DefaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Building Name:"
            android:id="@+id/buildingNameLabel"
            android:layout_row="0"
            android:layout_column="0" />

        <EditText
            style="@style/EditText"
            android:id="@+id/buildingNameEditText"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            style="@style/DefaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opening Time:"
            android:id="@+id/openingTimeLabel"
            android:layout_row="1"
            android:layout_column="0" />

        <TextView
            style="@style/DefaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="openTime"
            android:id="@+id/openingTimeTextView"
            android:layout_row="1"
            android:layout_column="1"
            android:clickable="true" />

        <TextView
            style="@style/DefaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Closing Time:"
            android:id="@+id/closingTimeLabel"
            android:layout_row="2"
            android:layout_column="0" />

        <TextView
            style="@style/DefaultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="closeTime"
            android:id="@+id/closingTimeTextView"
            android:layout_row="2"
            android:layout_column="1"
            android:clickable="true" />

    </GridLayout>

</LinearLayout>