<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.liamcook.ui.AuditWizardView">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|bottom|top"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_gravity="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Room Name:"
                android:id="@+id/textView" />

            <EditText
                android:imeActionLabel="Done"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/locationNameTextField"
                android:layout_weight="0.93" />
        </LinearLayout>

        <GridView
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/auditWizardGridView"
            android:numColumns="2"
            android:choiceMode="none"
            android:isScrollContainer="true"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/canelAuditButton"
                android:textAlignment="center" />

            <Button
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:id="@+id/finisedAuditWizardButton" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
