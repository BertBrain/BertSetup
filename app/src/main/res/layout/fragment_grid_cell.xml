<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="200dp"
    android:layout_height="wrap_content" tools:context="com.example.liamcook.ui.GridCell" android:id="@+id/gridCellLayout">

    <LinearLayout
        android:id="@+id/gridCellInnerLayout"
        android:orientation="vertical"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:background="@color/bright_foreground_material_dark">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/deviceTypeTextField"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="39dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/decrementButton"
                android:layout_gravity="right" />


            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/deviceCounterTextField"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" />

            <Button
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/incrementButton"
                android:layout_gravity="left" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
