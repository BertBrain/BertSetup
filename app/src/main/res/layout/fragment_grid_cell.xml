<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content" tools:context="com.example.liamcook.ui.GridCell" android:id="@+id/gridCellLayout">

    <LinearLayout
        android:id="@+id/gridCellInnerLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:background="#9fe1e2dc">

        <TextView
            android:fontFamily="sans-serif-light"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/deviceTypeTextField"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textSize="18dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/decrementButton"
                android:layout_gravity="right"
                android:background="#00e1e2dc" />


            <TextView
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/deviceCounterTextField"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="center" />

            <Button
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/incrementButton"
                android:layout_gravity="left"
                android:background="#00e1e2dc" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
