<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.liamcook.ui.GridCell" android:id="@+id/gridCellLayout">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/gridCellInnerLayout"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top"
        android:background="@color/material_blue_grey_800">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/deviceTypeTextField" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:text="-"
                android:id="@+id/decrementButton" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/deviceCounterTextField" />

            <Button
                android:layout_width="37dp"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/incrementButton" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
