<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="5dp">

            <include layout="@layout/project_detail_common_info" />

            <include layout="@layout/component_audit_bert_counters" />

            <include layout="@layout/project_detail_common_open_button" />

            <Button
                android:id="@+id/send_to_bert_button"
                style="@style/ActionButton"
                android:text="Send To Bert / Export Project File" />

            <Button
                android:id="@+id/exportToROIButton"
                style="@style/ActionButton"
                android:text="Export an ROI Sheet" />

            <Button
                android:id="@+id/begin_install_button"
                style="@style/ConvertButton"
                android:text="Begin Install" />

            <include layout="@layout/project_detail_common_delete_button" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>