<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liamcook.ui.AddProject">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <GridLayout
            android:paddingRight="@dimen/right_margin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:rowCount="3"
            android:id="@+id/grid"
            android:columnCount="2"
            android:orientation="vertical">

            <TextView
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Name:"
                android:id="@+id/textView3"
                android:layout_row="0"
                android:layout_column="0" />

            <EditText
                style="@style/EditText"
                android:id="@+id/projectNameTextField"
                android:layout_row="0"
                android:layout_column="1" />

            <TextView
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Contact:"
                android:id="@+id/textView2"
                android:layout_row="1"
                android:layout_column="0" />

            <EditText
                style="@style/EditText"
                android:id="@+id/contactTextField"
                android:layout_row="1"
                android:layout_column="1" />

            <TextView
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Phone Number:"
                android:id="@+id/textView4"
                android:layout_row="2"
                android:layout_column="0" />

            <EditText
                style="@style/EditText"
                android:inputType="phone"
                android:id="@+id/contactNumberTextField"
                android:layout_row="2"
                android:layout_column="1" />

        </GridLayout>

        <Button
            style="@style/SaveButton"
            android:text="Create Project"
            android:id="@+id/createProjectButton" />

    </LinearLayout>

</FrameLayout>
