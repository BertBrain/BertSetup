<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <include layout="@layout/fragment_project_metadata"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bertsInstalledCounter"
            android:rowCount="2"
            android:columnCount="4"
            android:orientation="vertical">

            <TextView
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Berts Installed: "
                android:id="@+id/textView19"
                android:layout_row="0"
                android:layout_column="0" />

            <TextView
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/berts_installed_label"
                android:layout_row="0"
                android:layout_column="1" />

            <TextView
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="  Total Berts: "
                android:id="@+id/textView22"
                android:layout_row="0"
                android:layout_column="2" />

            <TextView
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/total_berts_label"
                android:layout_row="0"
                android:layout_column="3" />

            <TextView
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Rooms Completed: "
                android:id="@+id/textView21"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/rooms_completed_label"
                android:layout_row="1"
                android:layout_column="1" />

            <TextView
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="  Total Rooms: "
                android:id="@+id/textView23"
                android:layout_row="1"
                android:layout_column="2" />

            <TextView
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/total_rooms_label"
                android:layout_row="1"
                android:layout_column="3" />

        </GridLayout>

        <Button
            style="@style/ActionButton"
            android:text="Export a Configurator CSV"
            android:id="@+id/exportToBertConfiguratorButton" />

        <include layout="@layout/fragment_open_building"/>

    </LinearLayout>

</LinearLayout>