<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.liamcook.ui.AddProject">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="736dp">

        <GridLayout

            android:layout_width="fill_parent"
            android:layout_height="214dp"
            android:layout_gravity="left|top"
            android:rowCount="4"
            android:id="@+id/grid"
            android:columnCount="2"
            android:orientation="vertical">

            <TextView
                style="@style/ThinText"
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Project Name:"
                android:id="@+id/textView3"
                android:layout_row="0"
                android:layout_column="0" />

            <EditText
                android:singleLine="true"
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:id="@+id/projectNameTextField"
                android:imeActionLabel="Done"
                android:imeOptions="actionDone"
                android:layout_row="0"
                android:layout_column="1"
                />

            <TextView
                style="@style/ThinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Project Contact:"
                android:id="@+id/textView2"
                android:layout_row="1"
                android:layout_column="0" />

            <EditText
                android:singleLine="true"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:id="@+id/contactTextField"
                android:imeActionLabel="Done"
                android:imeOptions="actionDone"
                android:layout_row="1"
                android:layout_column="1" />

            <TextView
                style="@style/ThinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Contact Phone Number:"
                android:id="@+id/textView4"
                android:layout_row="2"
                android:layout_column="0" />

            <EditText
                android:singleLine="true"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/contactNumberTextField"
                android:imeActionLabel="Done"
                android:imeOptions="actionDone"
                android:layout_row="2"
                android:layout_column="1" />
        </GridLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Project"
            android:id="@+id/createProjectButton"
            android:layout_gravity="center_horizontal"
            style="@android:style/Widget.Holo.Light.Button" />

    </LinearLayout>
</FrameLayout>
