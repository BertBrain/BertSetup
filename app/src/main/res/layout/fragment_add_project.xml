<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.liamcook.test.AddProject">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="736dp">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="214dp"
            android:layout_gravity="left|top"
            android:rowCount="4"
            android:id="@+id/grid"
            android:columnCount="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="253dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Project Name:"
                android:id="@+id/textView3"
                android:layout_row="0"
                android:layout_column="0" />

            <EditText
                android:layout_width="284dp"
                android:layout_height="wrap_content"
                android:id="@+id/projectNameTextField"
                android:layout_row="0"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Project Contact:"
                android:id="@+id/textView2"
                android:layout_row="1"
                android:layout_column="0" />

            <EditText
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:id="@+id/projectContactTextField"
                android:layout_row="1"
                android:layout_column="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Date:"
                android:id="@+id/textView4"
                android:layout_row="2"
                android:layout_column="0" />

            <EditText
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/dateTextField"
                android:layout_row="2"
                android:layout_column="1" />

        </GridLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Project"
            android:id="@+id/startProjectButton"
            android:layout_gravity="center_horizontal"
            android:onClick="openMain"/>

    </LinearLayout>
</FrameLayout>
