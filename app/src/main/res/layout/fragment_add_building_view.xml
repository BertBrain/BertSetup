<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="bert.ui.buildingList.AddBuildingFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:columnCount="2"
            android:orientation="vertical"
            android:id="@+id/add_building_grid_view"
            android:rowCount="4">

            <TextView
                style="@style/ThinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Building Name:"
                android:id="@+id/n"
                android:layout_row="0"
                android:layout_column="0" />

            <EditText
                style="@style/ThinText"
                android:imeOptions="actionDone"
                android:imeActionLabel="Done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/add_building_name_textfield"
                android:layout_row="0"
                android:layout_column="1" />

            <TextView
                style="@style/ThinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Opening Time:"
                android:id="@+id/textView10"
                android:layout_row="1"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/start_time_textfield"
                android:layout_row="1"
                android:layout_column="1"
                android:clickable="true" />

            <TextView
                style="@style/ThinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Closing Time:"
                android:id="@+id/textView15"
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/end_time_text_field"
                android:layout_row="2"
                android:layout_column="1"
                android:clickable="true" />

            <TextView
                style="@style/ThinText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Building Type:"
                android:id="@+id/textView16"
                android:layout_row="3"
                android:layout_column="0" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/building_type_spinner"
                android:layout_row="3"
                android:layout_column="1"
                android:spinnerMode="dropdown" />
        </GridLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Building"
            android:id="@+id/add_building_button"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</FrameLayout>
