<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bert.ui.buildingList.AddBuildingFragment">

    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <GridLayout
            android:id="@+id/add_building_grid_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:columnCount="2"
            android:orientation="vertical"
            android:paddingRight="@dimen/right_margin"
            android:rowCount="4">

            <TextView
                android:id="@+id/n"
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="0"
                android:text="Building Name:" />

            <EditText
                android:id="@+id/add_building_name_textfield"
                style="@style/EditText"
                android:layout_column="1"
                android:layout_row="0" />

            <TextView
                android:id="@+id/textView10"
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="1"
                android:text="Power on time:" />

            <TextView
                android:id="@+id/start_time_textfield"
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="1"
                android:clickable="true"
                android:text="Medium Text" />

            <TextView
                android:id="@+id/textView15"
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="2"
                android:text="Power off time:" />

            <TextView
                android:id="@+id/end_time_text_field"
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="2"
                android:clickable="true"
                android:text="Medium Text" />

            <TextView
                android:id="@+id/textView16"
                style="@style/DefaultText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_row="3"
                android:text="Building Type:" />

            <Spinner
                android:id="@+id/building_type_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_row="3"
                android:spinnerMode="dropdown" />

        </GridLayout>

        <Button
            android:id="@+id/add_building_button"
            style="@style/SaveButton"
            android:text="Add Building" />

    </LinearLayout>

</FrameLayout>
